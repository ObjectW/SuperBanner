<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadowPrimaryDark"
     android:clipChildren="false">

    <TextView
        android:id="@+id/demo3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="线性淡出(幻灯片)效果:"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="2dp"
        />
    <com.banner.superbanner.SuperBanner
        android:id="@+id/view_pager3"
        android:layout_below="@id/demo3_title"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        />
    <LinearLayout
        android:id="@+id/indicator_ly3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view_pager3"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:layout_alignRight="@id/view_pager3"
        android:padding="8dp"
        android:orientation="horizontal" />


    <TextView
        android:id="@+id/demo4_title"
        android:layout_below="@id/indicator_ly3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="3D画廊效果:"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="2dp"
        />
    <com.banner.superbanner.SuperBanner
        android:id="@+id/view_pager4"
        android:layout_below="@id/demo4_title"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:clipChildren="false"
        />
    <!--指示器的布局-->
    <LinearLayout
        android:id="@+id/indicator_ly4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/view_pager4"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/shadowColorBlack"
        android:orientation="horizontal" />
</RelativeLayout>